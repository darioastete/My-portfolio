---
const { skill } = Astro.props;
---

<div class="card-template bg-white w-full rounded-md p-5 shadow-md justify-center gap-2">
    <div class="title text-center">
        <h3 class="text-xl font-bold">{skill.name}</h3>
    </div>
    <!-- <div class="description">
        <p class="text-gray-400 text-xs font-light text-balance hidden xl:block" >{skill.description}</p>
    </div> -->
    <div class="scores">
        <div class="flex flex-col gap-3">
            {
                skill.skills.map((skill:any) => (
                <div class="score gap-2">
                    <div class="relative group">
                        <picture class="">   
                            <img src={skill.image} alt={skill.name} class="w-6 hover:scale-150 duration-150">
                        </picture>
                        <span class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 hidden group-hover:block bg-gray-800 text-white text-xs rounded py-1 px-2">
                            {skill.name}
                        </span>
                    </div>
                    <div class="bg-gray-300 h-2 rounded-full transition-all duration-700 ease-out hover:bg-gray-400" style={`width: ${skill.score}%`}
                    >
                    </div>
                    <div class="text-xs text-gray-700"><h1>{skill.score}%</h1></div>
                </div>
                ))
            }
        </div>
    </div>
</div>

<style>
.card-template {
    display: grid;
    grid-template-rows: 2rem 1fr;
    grid-template-columns: 1fr;
}

.score {
    display: grid;
    grid-template-columns: .5fr 1fr 0.5fr;
    align-items: center;
}
</style>